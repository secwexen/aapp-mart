{
  "name": "AAPP-MART Dev Container",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "python": "3.11",
    "git": "latest",
    "docker-in-docker": "latest",
    "pipx": "latest",
    "vscode-remote.extensionPack": "ms-python.python",
    "curl": "latest",
    "wget": "latest",
    "poetry": "latest",
    "jupyter": "latest",
    "pytest": "latest"
  },
  "postCreateCommand": "pip install --upgrade pip && pip install -r requirements.txt && pip install -r requirements-dev.txt",
  "remoteUser": "vscode"
}
