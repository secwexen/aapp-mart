# ============================================================
# AAPP-MART Environment Configuration (Example)
# Copy this file to `.env` and adjust values as needed.
# NEVER commit your real `.env` file to version control.
# ============================================================

# ------------------------------------------------------------
# General settings
# ------------------------------------------------------------
APP_ENV=development        # development | testing | production
DEBUG=true                 # Enable or disable debug mode
LOG_LEVEL=INFO             # DEBUG | INFO | WARNING | ERROR | CRITICAL

# ------------------------------------------------------------
# Target & Simulation settings
# ------------------------------------------------------------
DEFAULT_TARGET=127.0.0.1   # Default target IP or hostname
SIMULATION_MODE=true       # true = simulation only, false = controlled execution
MAX_SIMULATION_STEPS=50    # Safety limit for autonomous simulations

# ------------------------------------------------------------
# AI / Prediction engine settings
# ------------------------------------------------------------
MODEL_BACKEND=local        # local | remote | experimental
RISK_SCORE_THRESHOLD=7.0   # Minimum risk score to report findings

# ------------------------------------------------------------
# Reporting settings
# ------------------------------------------------------------
REPORT_FORMAT=txt          # txt | json | html
REPORT_OUTPUT_DIR=reports  # Directory for generated reports

# ------------------------------------------------------------
# Optional API / Integration settings
# ------------------------------------------------------------
ENABLE_API=false           # Enable REST API
API_HOST=127.0.0.1
API_PORT=8080

# ------------------------------------------------------------
# Security & Safety
# ------------------------------------------------------------
AUTHORIZED_TESTING_ONLY=true
REQUIRE_EXPLICIT_CONSENT=true
