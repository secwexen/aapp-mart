# =============================================================
# EditorConfig for AAPP-MART
# Consistent coding style across editors and IDEs
# =============================================================

root = true

# -------------------------------------------------------------
# All files
# -------------------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# -------------------------------------------------------------
# Python files
# -------------------------------------------------------------
[*.py]
max_line_length = 88
indent_style = space
indent_size = 4

# -------------------------------------------------------------
# YAML files
# -------------------------------------------------------------
[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

# -------------------------------------------------------------
# JSON files
# -------------------------------------------------------------
[*.json]
indent_style = space
indent_size = 2

# -------------------------------------------------------------
# TOML files
# -------------------------------------------------------------
[*.toml]
indent_style = space
indent_size = 2

# -------------------------------------------------------------
# Markdown files
# -------------------------------------------------------------
[*.md]
trim_trailing_whitespace = false

# -------------------------------------------------------------
# Shell scripts
# -------------------------------------------------------------
[*.sh]
indent_style = space
indent_size = 2
